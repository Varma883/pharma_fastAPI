{
    "info": {
        "_postman_id": "pharma-demo-collection",
        "name": "Pharma FastAPI Demo Collection",
        "description": "Collection designed for demonstrating Load Balancing, Caching, Rate Limiting, and Resilience.",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "base_url",
            "value": "http://localhost:8000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "0. Setup (Auth)",
            "item": [
                {
                    "name": "Register Admin User",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"demo_admin\",\n    \"password\": \"password123\",\n    \"full_name\": \"Demo Admin\",\n    \"role\": \"admin\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/register",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    }
                },
                {
                    "name": "Login & Get Token",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.collectionVariables.set(\"token\", jsonData.access_token);",
                                    "pm.test(\"Status code is 200\", function () {",
                                    "    pm.response.to.have.status(200);",
                                    "});"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/x-www-form-urlencoded"
                            }
                        ],
                        "body": {
                            "mode": "urlencoded",
                            "urlencoded": [
                                {
                                    "key": "username",
                                    "value": "demo_admin",
                                    "type": "text"
                                },
                                {
                                    "key": "password",
                                    "value": "password123",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/auth/login",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "1. Load Balancing Demo",
            "item": [
                {
                    "name": "Get Catalog (Check Hostname)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/catalog/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "catalog",
                                ""
                            ]
                        }
                    }
                }
            ],
            "description": "Send this request multiple times to see the 'hostname' change."
        },
        {
            "name": "2. Rate Limiting Demo",
            "item": [
                {
                    "name": "Trigger Rate Limit (Run Loop)",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/catalog/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "catalog",
                                ""
                            ]
                        }
                    }
                }
            ],
            "description": "Run this folder in Runner for 110 Iterations to trigger 429 Too Many Requests."
        },
        {
            "name": "3. Caching & Resilience Demo",
            "item": [
                {
                    "name": "Check Inventory Proxy",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/orders/check-inventory/1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "orders",
                                "check-inventory",
                                "1"
                            ]
                        },
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        }
                    }
                }
            ],
            "description": "1. Send request (Source: Service). 2. Stop Inventory Service. 3. Send Request again (Source: Cache)."
        },
        {
            "name": "4. Circuit Breaker Demo",
            "item": [
                {
                    "name": "Trigger Circuit Breaker",
                    "request": {
                        "method": "GET",
                        "header": [],
                        "url": {
                            "raw": "{{base_url}}/inventory/test-circuit-breaker",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "inventory",
                                "test-circuit-breaker"
                            ]
                        },
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{token}}",
                                    "type": "string"
                                }
                            ]
                        }
                    }
                }
            ],
            "description": "Hit 6 times. First 5=Service Unavailable. 6th=Circuit Breaker Open."
        }
    ]
}