            "name": "Auth Service",
            "item": [
                {
                    "name": "Register User",
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"username\": \"testuser\",\n    \"full_name\": \"Test User\",\n    \"password\": \"password123\",\n    \"role\": \"user\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/auth/register",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "auth",
                                "register"
                            ]
                        }
                    },
                    "response": []
                },
                {
                    "name": "Login User",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "var jsonData = pm.response.json();",
                                    "pm.environment.set(\"ACCESS_TOKEN\", jsonData.access_token);"
                                ],
                                "type": "text/javascript"
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "urlencoded",
                            "urlencoded": [
                                {
                                    "key": "username",
                                    "value": "testuser",
                                    "type": "text"
                                },
                                {
                                    "key": "password",
                                    "value": "password123",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{BASE_URL}}/auth/login",
                            "host": [
                                "{{BASE_URL}}"
                            ],
                            "path": [
                                "auth",
                                "login"
                            ]
                        }
                    },
                    "response": []
                },
                {
